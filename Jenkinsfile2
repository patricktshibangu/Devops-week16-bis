pipeline {
    agent any 
    tools {
        maven 'M2_HOME'
    }
    stages{
        stage('sonarqube scan'){
            steps{
                withSonarQubeEnv('SonarQube'){ 
              sh 'mvn verify org.sonarsource.scanner.maven:sonar-maven-plugin:sonar -Dsonar.projectKey=patricktshibangu_Devops-week16-bis'
            }
            }
        }
        stage('all maven commands'){
            steps{
                sh 'mvn clean test compile install package'
            }
        }
        stage('upload artifact'){
            steps{

            
            
            sh 'curl -uadmin:AP9VphspKafqA5vUwnY9zbUnvd6 -T \ 
            target/bio*jar \
             "http://3.82.94.250:8081/artifactory/geoapp2/"'
        }
    }
    stage('image build'){
        steps{
            sh 'aws ecr get-login-password --region us-east-1 | docker login --username AWS --password-stdin 002334349531.dkr.ecr.us-east-1.amazonaws.com'
            sh 'docker build -t geoapp .'
        }
    }
    stage('push image'){
        steps{
            sh 'docker tag geoapp:latest 002334349531.dkr.ecr.us-east-1.amazonaws.com/geoapp:latest'
            sh 'docker push 002334349531.dkr.ecr.us-east-1.amazonaws.com/geoapp:latest'
        }
    }
}
}